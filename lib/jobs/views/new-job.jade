extends ../../views/layout

block content
  header 
    h1
      a(href="/") ViffCloud
  div.pure-u-1-1
    div.create-job
      form.pure-form.pure-form-aligned(action="/jobs", method="post", enctype="multipart/form-data")
        fieldset
          legend Create a job

          div.pure-control-group
            label 
              |Job name
              span.required *
            input(type="text",placeholder="No more than 30 characters", name="name")
          div.pure-control-group
            label.desc Job description
            textarea(rows="3",cols="32", name="description")
    
          div.pure-control-group
            label(for="config-file")
              a(href="/help")
                i.fa.fa-question-circle
              |Config file
              span.required *
            input(type="file", name="configFile")
          div.pure-control-group
            label
            small.config-note  Note: file should only be .js file and less than 1M.
          div.pure-control-group
            label
            input.pure-button.pure-button-primary(type="submit",value="Save")

